<form data-remote="true" onsubmit={{action 'create'}}>
  <fieldset class="form-group">
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-info active" onclick={{action 'changeKind'}} kind='sms'>SMS</button>
      <button type="button" class="btn btn-info" onclick={{action 'changeKind'}} kind='email'>Email</button>
    </div>
  </fieldset>

  {{partial 'campaigns/form'}}
  <section class="row">
    <h2>Targets</h2>
    {{targets-filters
      previousCampaigns=campaigns
      filter=baseFilter
      newFilterChecked=newFilterChecked
    }}

  </section>
  {{input type="submit" class="btn btn-success" value="Create"}}
</form>
