{{#if loading}}
  <div class="spinner-wrapper">
    {{gear-spinner}}
  </div>
{{else}}
  {{#if limit}}
    <p>You've exceeded free campaigns limit of 100</p>
  {{else}}
    {{#link-to 'campaigns.new'}}{{fa-icon 'plus-circle'}}{{/link-to}}
  {{/if}}
  {{#if model}}
    <div class="panel panel-info">
      <div class="panel-heading">
        Campaigns
      </div>
      <table class="table">
        <thead>
          <tr>
            <td>Title</td>
            <td>Message</td>
            <td>Status</td>
            <td>Targets count</td>
            <td>Completed</td>
            <td>Failed</td>
            <td>Visitors returned</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          {{#each model as |campaign|}}
          <tr>
            <td>{{campaign.title}}</td>
            <td>{{campaign.message}}</td>
            <td>
              {{campaign-status-icon campaign.status}}
            </td>
            <td>{{campaign.targets_count}}</td>
            <td>{{campaign.completed_count}}</td>
            <td>{{campaign.failed_count}}</td>
            <td class="returned">{{campaign.returned_visitors_count}}</td>
            <td class='actions'>
              {{#if campaign.isPending}}
                {{#link-to 'campaigns.edit' campaign title='Edit'}}<span>{{fa-icon 'edit'}}</span>{{/link-to}}
              {{/if}}
              <i class="fa fa-trash" {{action 'delete' campaign}} title="Delete"/>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    {{empty-result}}
  {{/if}}
{{/if}}
