<div class="sign-in">
  <div class="form">
    <h1>Sign in</h1>
    <div class="form-group">
      {{input value=email placeholder='Name' id='name-input'}}
    </div>
    <div class="form-group">
      {{input value=password placeholder='Password' type='password' id='pwd-input'}}
    </div>
    <input type="submit" value="Sign in" class="btn btn-success" {{action 'signIn'}}>
  </div>
</div>
