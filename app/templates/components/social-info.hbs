<div class="container-fluid">
  <span class="social-kind">{{social-icon model.kind}}</span>
</div>
<div class="container-fluid">
  <div class="column col-xs-2">
    <i class="fa fa-envelope"/>
    <span>Email:</span>
  </div>
  <div class="column col-xs-4">
    <span>
      {{#if model.email}}
        {{model.email}}
      {{else}}
        unknown
      {{/if}}
    </span>
  </div>
</div>
<div class="row">
  <span>Name:</span>
  {{model.firstName}} {{model.lastName}}
</div>
