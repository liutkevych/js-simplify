<div class="container-fluid">
  <div class="column col-xs-1">
    <span class="social-kind">{{social-icon model.kind}}</span>
  </div>
  <div class="column col-xs-3">
    <i class="fa fa-envelope"/>
    <span>
      {{#if model.email}}
        {{model.email}}
      {{else}}
        unknown
      {{/if}}
    </span>
  </div>
  <div class="column col-xs-8">
    <span>Name:</span>
    {{model.first_name}} {{model.last_name}}
  </div>
</div>
