<select onchange={{action "selectLocation" value="target.value"}}>
  {{#each locations as |location|}}
    <option value={{location.id}} selected={{eq location.id location_id}}>
      {{location.name}}
    </option>
  {{/each}}
</select>
{{#stats-panel}}
  <h2>Visits:</h2>
  <h3>Total: {{stats.visits.details.total}}</h3>
  <h3>Visits per day stats:</h3>
  {{!-- {{#each-in stats.visits.details.per_day as |date count|}}
    {{date}}: {{count}}
    <br>
  {{else}}
    No visits for the given period
  {{/each-in}} --}}
  {{data-chart type='bars' chartData=stats.visits}}
{{/stats-panel}}

