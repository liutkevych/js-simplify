<div class="row">
  <div class="column col-md-8 col-sm-12">
    <div class="row">
      <div class="column col-xs-3">
        <img src="images/stats/online.svg">
        <span>
          <h4>Online</h4>
          123
        </span>
      </div>
      <div class="column col-xs-3">
        <img src="images/stats/loyals.svg">
        <span>
          <h4>Loyals</h4>
          456
        </span>
      </div>
      <div class="column col-xs-3">
        <img src="images/stats/numbers.svg">
        <span>
          <h4>Numbers</h4>
          123
        </span>
      </div>
      <div class="column col-xs-3">
        <img src="images/stats/emails.svg">
        <span>
          <h4>Emails</h4>
          456
        </span>
      </div>
    </div>
    <div class="row"></div>
    {{
      data-chart
      model=monthPresence.details
      options=monthPresenceOptions
      dataFormatter=monthPresenceFormatter
      loading=monthPresenceLoading
      type="column"
    }}
  </div>
  <div class="column col-md-4 col-sm-12 signins-chart">
    {{
      data-chart
      model=signins.details
      options=pieChartOptions
      dataFormatter=signinsFormatter
      loading=signinsLoading
      type="pie"
    }}
  </div>
</div>
<div class="row">
  <div class="column col-md-8 col-sm-12">
    {{
      data-chart
      model=dayPresence.details
      options=dayPresenceOptions
      dataFormatter=dayPresenceFormatter
      loading=dayPresenceLoading
      type="line"
    }}
  </div>
  <div class="column col-md-4 col-sm-12 genders-chart">
    {{
      data-chart
      model=signins.details
      options=pieChartOptions
      dataFormatter=signinsFormatter
      loading=signinsLoading
      type="pie"
    }}
  </div>
</div>
