<div class="top-stripe">

  {{#if session.isAuthenticated }}
    <button class="btn btn-warning" {{ action 'invalidateSession' }}>
      Sign out
    </button>
  {{else}}
    {{#link-to 'sign-in' class="btn btn-success"}}
      <span>Sign in</span>
    {{/link-to}}
  {{/if}}

  <span class="email">{{currentUser.attributes.name}}</span>

  {{fa-icon 'flag'}}
  {{fa-icon 'bell'}}
  {{fa-icon 'bars' click=(action 'toggleMenu')}}
</div>
